### BASE IMAGE
# node:lts-alpine
FROM node@sha256:9da65f99264be2a78682095c4789b3d8cab12e0012def7d937d7125ed6e7695c AS base

WORKDIR /app

# Update linux depenencies & install curl
RUN apk add && \
    apk add curl && \
    curl -sf https://gobinaries.com/tj/node-prune | sh

# Install dependencies
# Copy partial package.json generated by the NX build + package-lock.json
COPY ./dist/apps/auth-service/package.json package-lock.json ./

RUN npm ci --no-audit --no-fund

# Copy built code
COPY ./dist/apps/auth-service ./

# Run node prune
RUN node-prune


### FINAL IMAGE
# node:lts-alpine
FROM node@sha256:9da65f99264be2a78682095c4789b3d8cab12e0012def7d937d7125ed6e7695c

# Set up container environment
WORKDIR /app
ENV NODE_ENV=production

# Run application as node default user (instead of root)
RUN chown -R node:node /app
USER node

COPY --from=base /app ./

CMD node ./main.js
