### BASE IMAGE
FROM node:lts-alpine@sha256:bf1e1c4761cd5e417b5ed60d5c599266270b728878089efcd1d63a8bd1dde446 AS base

WORKDIR /app

# Update linux depenencies & install curl
RUN apk add && \
    apk add curl && \
    curl -sf https://gobinaries.com/tj/node-prune | sh

# Install dependencies
# Copy partial package.json generated by the NX build + package-lock.json
COPY ./dist/apps/auth-service/package.json package-lock.json ./

RUN npm ci --no-audit --no-fund

# Copy built code
COPY ./dist/apps/auth-service ./

# Prune unused files from node_modules folder
RUN node-prune


### FINAL IMAGE
FROM node:lts-alpine@sha256:bf1e1c4761cd5e417b5ed60d5c599266270b728878089efcd1d63a8bd1dde446

# Set up container environment
WORKDIR /app
ENV NODE_ENV=production

# Run application as node default user (instead of root)
RUN chown -R node:node /app
USER node

COPY --from=base /app ./

CMD node ./main.js
