### BASE IMAGE
FROM node:lts-alpine@sha256:264861cd2f785a2b727e9f908065e8d9e9358fcc1308da3cb207d9cba69afee2 AS base

WORKDIR /app

# Update linux depenencies & install curl
RUN apk add && \
    apk add curl && \
    curl -sf https://gobinaries.com/tj/node-prune | sh

# Install dependencies
# Copy partial package.json generated by the NX build + package-lock.json
COPY ./dist/apps/transaction-service/package.json package-lock.json ./

RUN npm ci --no-audit --no-fund

# Copy built code
COPY ./dist/apps/transaction-service ./

# Prune unused files from node_modules folder
RUN node-prune


### FINAL IMAGE
FROM node:lts-alpine@sha256:264861cd2f785a2b727e9f908065e8d9e9358fcc1308da3cb207d9cba69afee2

# Set up container environment
WORKDIR /app
ENV NODE_ENV=production

# Run application as node default user (instead of root)
RUN chown -R node:node /app
USER node

COPY --from=base /app ./

CMD node ./main.js
